    function cut_string_tab($string,$number){
        if(strlen($string) <= $number) {
            return $string;
        }
        else {	
            if(strpos($string," ",$number) > $number){
                $new_space = strpos($string," ",$number);
                $new_string = substr($string,0,$new_space)."..";
                return $new_string;
            }
            $new_string = substr($string,0,$number)."..";
            return $new_string;
        }
    }
